<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:titlebar="clr-namespace:xamarin_lib_harpia.Views"
             x:Class="xamarin_lib_harpia.Views.PaygoPage">

    <Shell.TitleView>
        <titlebar:TitleBar TitleText="Paygo"/>
    </Shell.TitleView>

    <ContentPage.Content>
        <StackLayout BackgroundColor="#181A26">
            <FlexLayout JustifyContent="SpaceBetween" Padding="10 10 0 10">
                <Label Text="Valor" TextColor="White" FontSize="24"></Label>
                <Entry 
                    Placeholder="R$0,00" 
                    PlaceholderColor="White"
                    TextColor="White" 
                    WidthRequest="280"
                    HorizontalTextAlignment="End"
                    Keyboard="Numeric"
                    ></Entry>
                <Image 
                    WidthRequest="30" 
                    RotationY="180"
                    Source="back.png" 
                    BackgroundColor="#181A26" 
                    ></Image>
            </FlexLayout>

            <FlexLayout JustifyContent="SpaceBetween" Padding="10 10 0 10">
                <Label Text="Parcelas" TextColor="White" FontSize="24"></Label>
                <Entry 
                    Placeholder="R$0,00" 
                    PlaceholderColor="White"
                    TextColor="White" 
                    WidthRequest="250"
                    HorizontalTextAlignment="End"
                    Keyboard="Numeric"
                    ></Entry>
                <Image 
                    WidthRequest="30" 
                    RotationY="180"
                    Source="back.png" 
                    BackgroundColor="#181A26" 
                    ></Image>
            </FlexLayout>

            <FlexLayout JustifyContent="SpaceBetween" Padding="10 10 0 10">
                <Label Text="Tipo de pagamento" TextColor="White" FontSize="24"></Label>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Não definido" TextColor="Red" Padding="5 0 0 0"></Label>
                    <Image 
                        WidthRequest="30" 
                        RotationY="180"
                        Source="back.png" 
                        BackgroundColor="#181A26" 
                        ></Image>
                </StackLayout>
            </FlexLayout>

            <FlexLayout JustifyContent="SpaceBetween" Padding="10 10 0 10">
                <Label Text="Adquirente" TextColor="White" FontSize="24"></Label>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Não definido" TextColor="Gray" Padding="5 0 0 0"></Label>
                    <Image 
                        WidthRequest="30" 
                        RotationY="180"
                        Source="back.png" 
                        BackgroundColor="#181A26" 
                        ></Image>
                </StackLayout>
            </FlexLayout>

            <FlexLayout JustifyContent="SpaceBetween" Padding="10 10 0 10">
                <Label Text="Tipo Parcelamento" TextColor="White" FontSize="24"></Label>
                <StackLayout Orientation="Horizontal">
                    <Label Text="À Vista" TextColor="Gray" Padding="5 0 0 0"></Label>
                    <Image 
                        WidthRequest="30" 
                        RotationY="180"
                        Source="back.png" 
                        BackgroundColor="#181A26" 
                        ></Image>
                </StackLayout>
            </FlexLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>